        <% if (locals.user) { %>
        <button class="hero-btn primary"
        onclick="location.href='/files'">View Dashboard</button>
        <button class="hero-btn outline"
        onclick="location.href='/log-out'">Log Out</button>
        <% } else { %>
        <button class="hero-btn primary"
        onclick="location.href='/sign-up'">Get Started Now</button>
        <button class="hero-btn outline"
        onclick="location.href='/log-in'">Log In</button>
        <%}%>
